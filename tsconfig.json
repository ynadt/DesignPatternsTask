{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["jest", "pino"],
    "moduleDetection": "force",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}